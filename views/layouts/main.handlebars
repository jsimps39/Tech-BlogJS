              <li class="nav-item">
                <a class="nav-link btn btn-light" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link btn btn-light"  href="/blog">Blog</a>
              </li>
              <li class="nav-item">
                <a class="nav-link btn btn-light" aria-current="page" href="/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                {{#if loggedIn}}
                <button class="nav-link btn btn-light" type="button" id="logout-link">Log Out</button>
                {{else}}
                <a class="nav-link btn btn-light" href="/login">Log In</a>
                {{/if}}
              </li>
            </ul>
          </div>
        </div>
      </nav>
      
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
