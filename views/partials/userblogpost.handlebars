<div class="col-md-10 col-lg-8 col-xl-7">
    <!-- Post preview-->
    <div class="blog-preview">
        <a href="/blog/{{id}}">
            <h2 class="blog-name">{{name}}</h2>
        </a>
        <p class="blogpost-meta">
            {{description}}
        </p>
        <p>post by {{user.username}}</p>
    </div>
    <!-- Divider-->
    <hr class="my-4" />
</div>
