<div class="col-md-10 col-lg-8 col-xl-7">
    <!-- Post preview-->
    <div class="post-preview">
        <a href="/post/{{id}}">
            {{!-- must be post by id --}}
            <h2 class="post-title">{{name}}</h2>
        </a>
        <p class="post-meta">
            {{description}}
        </p>
        <p>By: {{user.username}}</p>
    </div>
    <!-- Divider-->
    <hr class="my-4" />
</div>